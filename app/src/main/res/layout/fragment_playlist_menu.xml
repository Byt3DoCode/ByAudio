<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray">
    <Button
        android:id="@+id/btnFavorite"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="16dp"
        android:text="Favorites"
        android:textAllCaps="false"
        android:textColor="@color/mint"
        android:background="@color/gray"
        android:drawableStart="@drawable/icon_favorite_24"
        android:drawableTint="@color/mint"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/btnFolder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnFavorite"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="16dp"
        android:text="Folders"
        android:textAllCaps="false"
        android:textColor="@color/mint"
        android:background="@drawable/round_btn"
        android:drawableStart="@drawable/icon_folder_24"
        android:drawableTint="@color/mint"
        android:textSize="24sp"/>

    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/btnFolder"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/mint" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/border"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        tools:listitem="@layout/item_song"
        tools:itemCount="3"/>
</androidx.constraintlayout.widget.ConstraintLayout>